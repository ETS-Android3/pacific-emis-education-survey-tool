<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>

        <item name="alertDialogTheme">@style/AlertDialog</item>

        <item name="actionButtonStyle">@style/ActionButton</item>

        <item name="android:windowActivityTransitions" tools:targetApi="l">true</item>
        <item name="android:windowEnterTransition" tools:targetApi="l">@transition/window_fade</item>
        <item name="android:windowExitTransition" tools:targetApi="l">@transition/window_fade</item>

        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Text.PopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/Text.PopupMenu</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>
        <item name="android:listPreferredItemHeightLarge">48dp</item>

        <item name="tabStyle">@style/TabStyle</item>
    </style>

    <style name="AppTheme.NoEnterTransitions">
        <item name="android:windowEnterTransition" tools:targetApi="l">@null</item>
    </style>

    <style name="AppTheme.NoExitTransitions">
        <item name="android:windowExitTransition" tools:targetApi="l">@null</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text"/>

    <style name="Text.Body1">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Text.Body2">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Text.Body3">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title1">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title1.Small">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Title1.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="Text.Title2">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Text.Title3">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textColor">@color/blue_grey_400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="Text.Small1">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_popup</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
        <item name="android:dropDownVerticalOffset">20dp</item>
    </style>

    <style name="Text.PopupMenu">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_hor_states_selector</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="progressColor">@color/yellow</item>
        <item name="successColor">@color/dark_mint</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">@drawable/bg_tab_layout</item>
        <item name="tabBackground">@drawable/bg_page_button</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicator">@null</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/Text.Title1.Tab</item>
        <item name="tabTextColor">@color/blue_grey_900</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="Text.Title1.Tab">
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>