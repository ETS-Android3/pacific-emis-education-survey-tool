<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LevelTable" />

    <style name="LevelTable.Background">
        <item name="android:background">@color/grey_300</item>
        <item name="android:weightSum">@integer/weight_accreditation_level_sum</item>
    </style>

    <style name="LevelTable.Background.Header">
        <item name="android:background">@drawable/bg_summary_sticky_header</item>
    </style>

    <style name="LevelTable.Cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/report_table_cell_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:textAppearance">@style/Text.Body3</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="LevelTable.Cell.Name">
        <item name="android:layout_weight">@integer/weight_accreditation_level_name</item>
    </style>

    <style name="LevelTable.Cell.Score">
        <item name="android:layout_weight">@integer/weight_accreditation_level_score</item>
        <item name="android:layout_marginStart">1dp</item>
    </style>

    <style name="LevelTable.Cell.Header">
        <item name="android:textAppearance">@style/Text.Title1.Small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LevelTable.Cell.Header.Name">
        <item name="android:layout_weight">@integer/weight_accreditation_level_name</item>
    </style>

    <style name="LevelTable.Cell.Header.Score">
        <item name="android:layout_weight">@integer/weight_accreditation_level_score</item>
    </style>

</resources>