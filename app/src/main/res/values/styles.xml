<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>

        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="TranslucentAppTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TextViewBaseDrawerScreen" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BaseThemeRecyclerView" parent="AppTheme">
        <item name="android:divider">@color/pinkish_grey</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ThemeRecyclerViewSplashMenu" parent="BaseThemeRecyclerView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ThemeRecyclerViewNavigationDrawer" parent="BaseThemeRecyclerView">
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextViewNavigationDrawerHeader" parent="TextViewBaseDrawerScreen">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextViewNavigationDrawerFooter" parent="TextViewBaseDrawerScreen">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@string/font_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStandardsNavigationDrawerFooter" parent="AppTheme">
        <item name="android:fontFamily">@string/font_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_sky_blue</item>
    </style>

    <style name="ListText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:fontFamily">@string/font_light</item>
    </style>

    <style name="GreyedListText" parent="ListText">
        <item name="android:textColor">@color/greyed_blue</item>
    </style>

    <style name="ClickableListText" parent="ListText">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="HorizontalProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_states_selector</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:fontFamily">@string/font_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextButton" parent="TextAppearance.AppCompat">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CapitalizedTextButton" parent="TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@string/font_medium</item>
    </style>

    <style name="AccountTextButton" parent="TextButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:fontFamily">@string/font_normal</item>
    </style>

    <style name="SettingsDelimeter" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@color/soft_grey</item>
    </style>

    <style name="KeyboardDialog" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="Selectable" parent="AppTheme">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="SelectableBorderless" parent="Selectable">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <!-- region SummaryCells -->
    <style name="SummaryCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="SummaryCell.Name" parent="SummaryCell">
        <item name="android:layout_weight">@integer/weight_summary_name</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="SummaryCell.Item" parent="SummaryCell">
        <item name="android:layout_weight">@integer/weight_summary_item</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StandardSummaryCell" parent="SummaryCell.Name">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="StickyNameSummaryCell" parent="SummaryCell.Name">
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/color_criteria_progress_bg</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HeaderNameSummaryCell" parent="SummaryCell.Name">
        <item name="android:background">@color/white</item>
    </style>

    <style name="CriteriaSummaryCell" parent="SummaryCell.Item">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/summary</item>
    </style>

    <style name="StickyItemSummaryCell" parent="SummaryCell.Item">
        <item name="android:background">@color/color_criteria_progress_bg</item>
    </style>

    <style name="HeaderItemSummaryCell" parent="SummaryCell.Item">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- endregion -->

    <!-- region Photos -->
    <style name="DeleteButton" parent="SelectableBorderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <!-- endregion -->

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
