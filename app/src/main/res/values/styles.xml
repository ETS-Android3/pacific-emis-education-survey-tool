<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>


        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>

    </style>

    <style name="TextViewBaseDrawerScreen" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BaseThemeRecyclerView" parent="AppTheme">
        <item name="android:divider">@color/pinkish_grey</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="ThemeRecyclerViewSplashMenu" parent="BaseThemeRecyclerView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ThemeRecyclerViewNavigationDrawer" parent="BaseThemeRecyclerView">
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextViewNavigationDrawerHeader" parent="TextViewBaseDrawerScreen">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextViewNavigationDrawerFooter" parent="TextViewBaseDrawerScreen">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStandardsNavigationDrawerFooter" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_sky_blue</item>
    </style>

    <style name="ListText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ClickableListText" parent="ListText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="HorizontalProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_states_selector</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextButton" parent="TextAppearance.AppCompat">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ConnectionTextButton" parent="TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AccountTextButton" parent="TextButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SettingsDelimeter" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@color/soft_grey</item>
    </style>

</resources>
