<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/delimeter_grey"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textview_summary_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_standard"
        android:layout_margin="0.5dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/color_criteria_primary_dark"
        tools:text="Standard 1: Leadership"
        tools:background="@color/white"/>

    <TextView
        android:id="@+id/textview_c1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_criteria"
        android:layout_margin="0.5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        tools:background="@color/dark_mint"
        tools:text="4/4"/>

    <TextView
        android:id="@+id/textview_c2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_criteria"
        android:layout_margin="0.5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        tools:background="@color/pink"
        tools:text="4/4"/>

    <TextView
        android:id="@+id/textview_c3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_criteria"
        android:layout_margin="0.5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        tools:background="@color/dark_mint"
        tools:text="4/4"/>

    <TextView
        android:id="@+id/textview_c4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_criteria"
        android:layout_margin="0.5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        tools:background="@color/pink"
        tools:text="4/4"/>
</LinearLayout>