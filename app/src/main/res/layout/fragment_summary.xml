<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.omega_r.libs.omegarecyclerview.OmegaRecyclerView
        android:id="@+id/recyclerview_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/item_summary_standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_section="header">

            <fm.doe.national.ui.custom_views.summary_header.SummaryHeaderView
                android:id="@+id/summaryheaderview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include layout="@layout/item_summary_top_header"/>

        </LinearLayout>

    </com.omega_r.libs.omegarecyclerview.OmegaRecyclerView>

</FrameLayout>