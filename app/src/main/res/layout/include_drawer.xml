<?xml version="1.0" encoding="utf-8"?>
<com.omega_r.libs.layouts.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/drawer_menu_width"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_title"
        style="@style/TextViewNavigationDrawerHeader"
        android:layout_alignParentStart="true"
        android:text="@string/title_education_survey_tool"
        app:layout_marginTopPercent="18%" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textview_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_splash_logo" />


    <com.omega_r.libs.omegarecyclerview.OmegaRecyclerView
        android:id="@+id/recyclerview_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:layout_above="@id/layout_bottom"
        android:layout_below="@+id/imageview_logo"
        android:theme="@style/ThemeRecyclerViewNavigationDrawer"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:showDivider="end|middle"
        tools:listitem="@layout/item_menuitem" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recyclerview_drawer"
        android:background="@color/pinkish_grey">

    </View>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_marginBottomPercent="3%"
        app:layout_marginTopPercent="2%">

        <TextView
            android:id="@+id/textview_education_survey_tool"
            style="@style/TextViewNavigationDrawerFooter"
            android:layout_marginStart="24dp"
            android:text="@string/action_education_survey_tool"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/charcoal_grey"
            app:layout_constraintEnd_toEndOf="@+id/textview_education_survey_tool"
            app:layout_constraintStart_toStartOf="@+id/textview_education_survey_tool"
            app:layout_constraintTop_toBottomOf="@+id/textview_education_survey_tool" />

        <TextView
            android:id="@+id/textview_settings"
            style="@style/TextViewNavigationDrawerFooter"
            android:layout_alignEnd="@+id/layout_bottom"
            android:layout_marginEnd="24dp"
            android:text="@string/action_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/charcoal_grey"
            app:layout_constraintEnd_toEndOf="@+id/textview_settings"
            app:layout_constraintStart_toStartOf="@+id/textview_settings"
            app:layout_constraintTop_toBottomOf="@+id/textview_settings" />

    </android.support.constraint.ConstraintLayout>


</com.omega_r.libs.layouts.percent.PercentRelativeLayout>