<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.menu.MainMenuActivity">

    <ImageButton
        android:id="@+id/imagebutton_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="@string/title_main_menu"
        android:textAlignment="center"
        android:textAppearance="@style/Text.Body3"
        android:textColor="@color/blue_grey_700"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_credits"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="60dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_assignments"
        android:drawablePadding="24dp"
        android:focusable="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/label_credits"
        android:textAppearance="@style/Text.Title4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="24dp"
        android:focusable="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/label_settings"
        android:textAppearance="@style/Text.Title4"
        app:layout_constraintBottom_toTopOf="@+id/textview_credits"
        app:layout_constraintEnd_toEndOf="@+id/textview_credits"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textview_credits" />

    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="wrap_content"
        android:layout_height="234dp"
        android:layout_marginTop="80dp"
        android:maxWidth="234dp"
        android:maxHeight="234dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_title"
        app:srcCompat="@drawable/ic_default_logo"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_icon">

        <Button
            android:id="@+id/button_accreditation"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:text="@string/title_school_accreditation"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/button_wash"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_marginStart="40dp"
            android:text="@string/title_wash" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>