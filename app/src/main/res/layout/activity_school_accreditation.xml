<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.screens.school_accreditation.SchoolAccreditationActivity">

    <include layout="@layout/include_appbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/header_school_accreditation"
        android:textColor="@color/charcoal_grey"
        android:textSize="@dimen/size_text_titles"
        android:textStyle="normal" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.omega_r.libs.omegarecyclerview.OmegaRecyclerView
            android:id="@+id/recyclerview_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/BaseThemeRecyclerView"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:showDivider="end|middle"
            tools:listitem="@layout/item_survey" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_new_accreditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:backgroundTint="@color/sunflower_yellow"
            app:layout_behavior="fm.doe.national.ui.screens.school_accreditation.FloatingActionButtonBehavior"
            app:srcCompat="@drawable/ic_plus" />

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>