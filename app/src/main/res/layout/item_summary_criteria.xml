<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:weightSum="@integer/weight_summary_rates">

    <TextView
        android:id="@+id/textview_criteria_title"
        android:textColor="@color/colorPrimary"
        style="@style/CriteriaSummaryCell"
        tools:text="C1" />

    <fm.doe.national.ui.screens.report.summary.SummaryTextView
        android:id="@+id/textview_cell_1"
        style="@style/CriteriaSummaryCell"
        tools:text="1" />

    <fm.doe.national.ui.screens.report.summary.SummaryTextView
        android:id="@+id/textview_cell_2"
        style="@style/CriteriaSummaryCell"
        tools:text="1" />

    <fm.doe.national.ui.screens.report.summary.SummaryTextView
        android:id="@+id/textview_cell_3"
        style="@style/CriteriaSummaryCell"
        tools:text="1" />

    <fm.doe.national.ui.screens.report.summary.SummaryTextView
        android:id="@+id/textview_cell_4"
        style="@style/CriteriaSummaryCell"
        tools:text="1" />

    <fm.doe.national.ui.screens.report.summary.SummaryTextView
        android:id="@+id/textview_total"
        style="@style/CriteriaSummaryCell"
        android:textStyle="bold"
        tools:text="4" />

</LinearLayout>