<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_alphabetical_numbering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/charcoal_grey"
            android:textSize="16sp"
            android:fontFamily="@string/font_medium"
            android:layout_marginStart="32dp"
            tools:text="Subcriteria CO1.1.a" />

        <LinearLayout
            android:id="@+id/layout_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_below="@id/textview_alphabetical_numbering"
            android:layout_toStartOf="@id/switchablebutton_answer"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_question"
                style="@style/Selectable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/charcoal_grey"
                android:textSize="16sp"
                android:lineSpacingExtra="8sp"
                tools:text="Them documents and guidelines are regularly used in planning" />

            <TextView
                android:id="@+id/textview_interview_questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/grey_600"
                android:textSize="14sp"
                android:lineSpacingExtra="5sp"
                tools:text="How do you manage instructional planning collaborations with your teachers? Do your teachers plan together or by themselves?" />

        </LinearLayout>

        <fm.doe.national.ui.custom_views.SwitchableButton
            android:id="@+id/switchablebutton_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/layout_questions"
            android:layout_marginEnd="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_comment">

        <TextView
            android:id="@+id/textview_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/charcoal_grey"
            android:lineSpacingExtra="5sp"
            tools:text="There is a comment that National and State curriculum documents and guidelines are regularly used in planning" />

        <ImageView
            android:id="@+id/imagebutton_delete"
            style="@style/SelectableBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_icon_delete"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textview_comment"/>

        <ImageView
            android:id="@+id/imageview_edit_button"
            style="@style/SelectableBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            app:srcCompat="@drawable/ic_edit"
            android:layout_toStartOf="@+id/imagebutton_delete"
            android:layout_alignTop="@+id/imagebutton_delete"/>

    </RelativeLayout>

    <fm.doe.national.ui.custom_views.photos_view.PhotoBoxView
        android:id="@+id/photoboxview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="72dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_comment_button"
            style="@style/SelectableBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:contentDescription="@string/button_comment"
            app:srcCompat="@drawable/ic_icon_comment" />


        <ImageView
            android:id="@+id/imageview_photo_button"
            style="@style/SelectableBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/button_comment"
            app:srcCompat="@drawable/ic_icon_photo" />

    </LinearLayout>
</LinearLayout>