<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_alphabetical_numbering"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/size_criteria_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="a." />

    <TextView
        android:id="@+id/textview_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="@dimen/size_criteria_text"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/switch_answer"
        app:layout_constraintStart_toEndOf="@+id/textview_alphabetical_numbering"
        tools:text="There is evidence that National and State curriculum documents and guidelines are regularly used in planning" />

    <fm.doe.national.ui.custom_views.SwitchableButton
        android:id="@+id/switch_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview_question"
        app:layout_constraintTop_toTopOf="@+id/textview_question"/>

</android.support.constraint.ConstraintLayout>