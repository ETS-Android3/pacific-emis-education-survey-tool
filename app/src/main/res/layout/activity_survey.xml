<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_appbar"
        layout="@layout/include_appbar" />

    <RelativeLayout
        android:id="@+id/layout_navigator"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/layout_appbar"
        android:background="@color/grey_200">

        <ImageView
            android:id="@+id/imageview_expanding_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_expand_more_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textview_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageview_expanding_arrow"
            android:textAppearance="@style/Text.Navigation.Header"
            tools:text="7/16" />

        <fm.doe.national.ui.custom_views.StateProgressBar
            android:id="@+id/progressbar"
            style="@style/HorizontalProgressBar"
            android:layout_width="@dimen/width_progress_bar"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/textview_progress"
            tools:progress="45" />

        <com.omega_r.libs.views.OmegaTextView
            android:id="@+id/omagetextview_current_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/progressbar"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAppearance="@style/Text.Navigation.Header"
            tools:text="Standard SE1: Leadership" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_navigator"/>

    <com.omega_r.libs.omegarecyclerview.OmegaRecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_200"
        android:layout_below="@+id/layout_navigator"
        android:visibility="gone"/>

</RelativeLayout>