<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/delimeter_grey"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textview_header_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_standard"
        android:layout_margin="0.5dp"
        android:background="@color/color_criteria_progress_bg"
        android:textAllCaps="true"
        android:textColor="@color/charcoal_grey"
        android:textSize="10sp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        tools:text="Principal's interview"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_criteria"
        android:layout_margin="0.5dp"
        android:background="@color/color_criteria_progress_bg"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_criteria"
        android:layout_margin="0.5dp"
        android:background="@color/color_criteria_progress_bg"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_criteria"
        android:layout_margin="0.5dp"
        android:background="@color/color_criteria_progress_bg"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_summary_criteria"
        android:layout_margin="0.5dp"
        android:background="@color/color_criteria_progress_bg"/>

</LinearLayout>