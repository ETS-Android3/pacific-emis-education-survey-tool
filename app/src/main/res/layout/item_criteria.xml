<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        style="@style/CriteriaItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintlayout_criteria_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_criteria_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="44dp"
                android:layout_marginEnd="72dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/color_criteria_primary"
                android:textSize="@dimen/size_criteria_text"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Criteria 1.1: The principal has very high expectations for students and teachers. " />

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="72dp"
                android:layout_marginStart="16dp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/progress_bar_states"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_criteria_expand_more_24dp" />

            <TextView
                android:id="@+id/textview_progress"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@color/color_criteria_primary_dark"
                android:textSize="@dimen/size_criteria_text"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="4/16" />

        </android.support.constraint.ConstraintLayout>

        <com.omega_r.libs.omegarecyclerview.OmegaRecyclerView
            android:id="@+id/recyclerview_subcriterias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="22dp"
            android:visibility="visible"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/item_sub_criteria" >

            <LinearLayout
                android:id="@+id/linearlayout_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_section="footer">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_criteria_hint_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textColor="@color/color_criteria_primary_dark"
                    android:text="@string/criteria_hint"/>


            </LinearLayout>

        </com.omega_r.libs.omegarecyclerview.OmegaRecyclerView>

    </LinearLayout>

</android.support.v7.widget.CardView>