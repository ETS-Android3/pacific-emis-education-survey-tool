<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintlayout_criteria_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_criteria_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="44dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/charcoal_grey"
                android:textSize="16sp"
                android:lineSpacingExtra="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageview_expanding_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Criteria 1.1: The principal has very high expectations for students and teachers. " />

            <fm.doe.national.ui.custom_views.OmegaProgressBar
                android:id="@+id/progressbar"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="72dp"
                android:layout_marginStart="16dp"
                style="@style/HorizontalProgressBar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageview_expanding_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textview_criteria_title"
                app:srcCompat="@drawable/ic_criteria_expand_less_24dp" />

            <TextView
                android:id="@+id/textview_progress"
                android:layout_width="72dp"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/ProgressText"
                tools:text="4/16" />

        </android.support.constraint.ConstraintLayout>

        <com.omega_r.libs.omegarecyclerview.OmegaRecyclerView
            android:id="@+id/recyclerview_subcriterias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_sub_criteria">

            <LinearLayout
                android:id="@+id/linearlayout_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="24dp"
                app:layout_section="header">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="32dp"
                    app:srcCompat="@drawable/ic_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/criteria_hint"
                    android:textColor="@color/grey_600"
                    android:textSize="14sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </com.omega_r.libs.omegarecyclerview.OmegaRecyclerView>

    </LinearLayout>

</android.support.v7.widget.CardView>