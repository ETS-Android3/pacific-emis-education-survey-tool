<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_standard_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        tools:src="@drawable/ic_leadreship_standard" />

    <TextView
        android:id="@+id/textview_type_standard_and_numbering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/dark_sky_blue"
        android:textSize="20sp"
        android:textStyle="normal"
        tools:text="Standard 1: " />

    <TextView
        android:id="@+id/textview_standard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:maxLines="1"
        android:textColor="@color/dark_sky_blue"
        android:textSize="20sp"
        android:textStyle="normal"
        tools:text="Leadership" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textview_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        tools:text="24/53" />

</android.widget.LinearLayout>