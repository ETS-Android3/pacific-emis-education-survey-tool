<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="#f2f3f8"
                android:endColor="#f2f3f8"
                android:startColor="#f2f3f8" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="#50be75"
                    android:endColor="#50be75"
                    android:startColor="#50be75" />
            </shape>
        </clip>
    </item>

</layer-list>