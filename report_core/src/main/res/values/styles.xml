<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Summary" />

    <style name="Summary.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:weightSum">@integer/weight_summary_row</item>
        <item name="android:background">@color/delimeter_grey</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="Summary.Cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Summary.Cell.CriteriaName">
        <item name="android:layout_weight">@integer/weight_summary_criteria_name</item>
        <item name="android:textAppearance">@style/Text.Body3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Summary.Cell.CriteriaValue">
        <item name="android:layout_weight">@integer/weight_summary_criteria_value</item>
        <item name="android:textAppearance">@style/Text.Body3</item>
        <item name="android:textColor">@color/blue_grey_400</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Summary.Cell.CriteriaTotal">
        <item name="android:layout_weight">@integer/weight_summary_criteria_total</item>
    </style>

    <style name="Summary.Cell.StandardName">
        <item name="android:layout_weight">@integer/weight_summary_standard_name</item>
    </style>

    <style name="Summary.Cell.StandardTotal">
        <item name="android:layout_weight">@integer/weight_summary_standard_total</item>
    </style>

    <style name="Summary.HeaderSubCriteriaValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@integer/weight_summary_criteria_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Text.Title1.Small</item>
    </style>

</resources>