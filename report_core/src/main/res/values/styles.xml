<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text.Report"/>

    <style name="Text.Report.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Report.Level">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Summary"/>

    <style name="Summary.Row">
        <item name="android:weightSum">100</item>
        <item name="android:background">@color/delimeter_grey</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="Summary.Cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="Summary.Cell.Name">
        <item name="android:layout_weight">@integer/weight_summary_name</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_600</item>
    </style>

    <style name="Summary.Cell.Item">
        <item name="android:layout_weight">@integer/weight_summary_item</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Summary.Cell.Name.Standard">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Summary.Cell.Name.Sticky">
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/color_criteria_progress_bg</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Summary.Cell.Name.Header">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Summary.Cell.Item.Criteria">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Summary.Cell.Item.Sticky">
        <item name="android:background">@color/color_criteria_progress_bg</item>
    </style>

    <style name="Summary.Cell.Item.Header">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@string/font_normal</item>
    </style>
</resources>