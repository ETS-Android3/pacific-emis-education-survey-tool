<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp">

    <com.omega_r.libs.omegarecyclerview.OmegaRecyclerView
        android:id="@+id/recyclerview_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_summary_standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            app:layout_section="header">

            <fm.doe.national.report_core.ui.level_legend.LevelLegendView
                android:id="@+id/summaryheaderview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="40dp"
                app:layout_section="header" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/summary"
                android:textAppearance="@style/Text.Title1.Large" />

        </LinearLayout>

    </com.omega_r.libs.omegarecyclerview.OmegaRecyclerView>

</FrameLayout>