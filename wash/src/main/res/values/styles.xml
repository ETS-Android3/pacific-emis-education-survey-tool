<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SelectableRow" parent="AppTheme">
        <item name="android:background">@drawable/bg_selectable_item</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AnswersBlock" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
    </style>

    <style name="GeolocationText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Body1</item>
        <item name="startTextColor">@color/blue_grey_900</item>
        <item name="startTextFontFamily">@font/noto_sans_regular</item>
        <item name="startTextSize">20sp</item>
    </style>
</resources>