<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RmiTable">
        <item name="android:background">@color/delimeter_grey</item>
        <item name="android:weightSum">@integer/weight_rmi_report_sum</item>
    </style>

    <style name="RmiTable.Cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/report_table_cell_height</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RmiTable.Cell.Header">
        <item name="android:textAppearance">@style/Text.Title1.Small</item>
        <item name="android:layout_weight">@integer/weight_rmi_report_tally</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RmiTable.Cell.Header.Level">
        <item name="android:layout_weight">@integer/weight_rmi_report_level</item>
    </style>

    <style name="RmiTable.Cell.Value">
        <item name="android:textAppearance">@style/Text.Body3</item>
        <item name="android:layout_weight">@integer/weight_rmi_report_tally</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="RmiTable.Cell.Value.Level">
        <item name="android:layout_weight">@integer/weight_rmi_report_level</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

</resources>