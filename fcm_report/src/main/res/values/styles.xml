<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LevelTable"/>

    <style name="LevelTable.Background">
        <item name="android:background">@color/black</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="LevelTable.Cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/levels_table_cell_height</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="LevelTable.Cell.Name">
        <item name="android:layout_weight">40</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LevelTable.Cell.Name.Large">
        <item name="android:layout_weight">80</item>
    </style>

    <style name="LevelTable.Cell.Item">
        <item name="android:layout_weight">20</item>
        <item name="android:gravity">center</item>
    </style>

</resources>